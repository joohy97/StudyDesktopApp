<Window x:Class="SnakeBiteGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeBiteGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Stretch="Fill" Source="main.png"/>
        
        <TextBlock Text="Snake Bite Game" 
                   FontSize="60" FontWeight="ExtraBold" Foreground="AliceBlue"
                   HorizontalAlignment="center" Margin="145"/>
        
        <Button x:Name="BtnPlay" Content="PLAY" Width="200" Height="50" Margin="160, 315, 430, 50 " 
                FontSize="20" Click="BtnPlay_Click" HorizontalAlignment="Center"/>
        
        <Button x:Name="BtnExit" Content="EXIT" Width="200" Height="50" Margin="450, 315, 160, 50 " 
                FontSize="20" Click="BtnExit_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
